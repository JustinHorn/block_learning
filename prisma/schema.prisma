datasource db {
    provider = "sqlite"
    url      = "file:./dev.db"
}

// 2
generator client {
    provider        = "prisma-client-js"
    previewFeatures = ["connectOrCreate"]
}

model Resource {
    id     Int      @id @default(autoincrement())
    date   DateTime @default(now())
    title  String
    href   String
    author String
    tags   Tag[]

}

model Tag {
    id        Int        @id @default(autoincrement())
    name      String     @unique
    resources Resource[]
}
